REM Half finished, but demonstrates the concept!

MODE 1
VDU 19,1,2,0,0,0
REM colour 1 green, colour 2, yellow, colour 3 white, colour 4 black

LET STARTY = 1000
LET STARTX = 400
SIZE = 100

BUFFER = 25
REM start outline boxes
CURX = STARTX
CURY = STARTY
MOVE CURX,CURY
DRAW 1018,STARTY
DRAW 1018,STARTY - 743
DRAW 400,STARTY - 743
DRAW CURX,CURY
REM start inner boxes

CURX = STARTX + 10
CURY = STARTY - 5
REPEAT
REPEAT
MOVE CURX,CURY
DRAW CURX+SIZE,CURY
DRAW CURX+SIZE,CURY-SIZE
DRAW CURX,CURY-SIZE
DRAW CURX,CURY
CURX = CURX + SIZE + BUFFER
X = X + 1
UNTIL X = 5

CURX = 410
X = 0
CURY = CURY - SIZE - BUFFER
Y = Y + 1

UNTIL Y = 6
REM end inner boxes
REM start wordlist
N = 4
DIM WORDS$(N)
WORDS$(1) = "FIRST"
WORDS$(2) = "GROAT"
WORDS$(3) = "ROBIN"
WORDS$(4) = "DUCKS"
ANSWER$ = WORDS$(RND(4))
PRINT(ANSWER$)
REM end wordlist

DIM ATTEMPT$(6)

GUESSCOUNT = 1

PRINT "GUESS?"
INPUT GUESS$
ATTEMPT$(GUESSCOUNT) = GUESS$
REM BLOCK COLOURING
Z = 1
CBOXX = STARTX + 10
CBOXY = STARTY - 10
YTHICK = 3
INNERBUFFER = 32
INNERSIZE = 94
GCOUNT = 1
USEDLETTERS$ = ATTEMPT$(1)
USEDLETTERS$ = USEDLETTERS$ + ATTEMPT$(1)
REPEAT 

IF MID$(ATTEMPT$(1),Z,1) = MID$(ANSWER$,Z,1) THEN GCOL0,1 ELSE IF INSTR(ANSWER$,MID$(ATTEMPT$(1),Z,1)) > 0 AND INSTR(USEDLETTERS$,MID$(ATTEMPT$(1),Z,1)) = 0 THEN GCOL0,2 ELSE GCOL0,3
MOVE CBOXX,CBOXY
MOVE CBOXX + INNERSIZE,CBOXY
PLOT 85,CBOXX + INNERSIZE,CBOXY - INNERSIZE
MOVE CBOXX,CBOXY
MOVE CBOXX,CBOXY - INNERSIZE
PLOT 85,CBOXX + INNERSIZE,CBOXY - INNERSIZE
CBOXX = CBOXX +INNERSIZE+INNERBUFFER
Z = Z + 1
UNTIL Z = 6
CBOXY = CBOXY - INNERSIZE - INNERBUFFER
CBOXX = STARTX + 10
REM BLOCK COLOURING END

VDU 5
MOVE 442,757

TEXTX = 445
TEXTBUF = 125
Z = 1
GCOL 0,4
REPEAT
MOVE TEXTX,STARTY - 48
PRINT MID$(GUESS$,Z,1)
TEXTX = TEXTX + 1
TEXTX = TEXTX + TEXTBUF
Z = Z + 1
UNTIL Z = 6


